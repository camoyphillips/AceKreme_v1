@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-5 text-danger fw-bold mb-3">An error occurred</h1>
        <p class="lead text-secondary mb-4">
            We’re sorry — something went wrong while processing your request.
        </p>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Return Home</a>
    </div>

    <hr class="my-5" />

    <div class="alert alert-info">
        <h5 class="fw-bold">For Developers</h5>
        <p>
            To view detailed error information, switch to the
            <strong>Development</strong> environment.
        </p>
        <p class="mb-0">
            Set the environment variable:
            <code>ASPNETCORE_ENVIRONMENT=Development</code><br />
            and restart the application.
        </p>
    </div>
</div>
