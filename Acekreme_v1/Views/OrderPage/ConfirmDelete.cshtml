@model AceKreme_v1.Dtos.OrderDto
@{
    ViewData["Title"] = "Delete Order";
}
<h1>Delete Order</h1>

<div class="alert alert-danger">
    Are you sure you want to delete Order #<strong>@Model.OrderId</strong>?
</div>

<dl class="row">
    <dt class="col-sm-3">Total</dt>
    <dd class="col-sm-9">@Model.TotalAmount.ToString("C")</dd>
</dl>

<form asp-action="ConfirmDelete" asp-route-id="@Model.OrderId" method="post">
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
