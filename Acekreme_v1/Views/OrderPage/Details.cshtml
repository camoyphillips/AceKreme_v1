@model AceKreme_v1.Dtos.OrderDto
@{
    ViewData["Title"] = "Order Details";
}
<h1>Order #@Model.OrderId</h1>

<dl class="row">
    <dt class="col-sm-3">Order Date</dt>
    <dd class="col-sm-9">@Model.OrderDate.ToLocalTime().ToString("f")</dd>

    <dt class="col-sm-3">Total Amount</dt>
    <dd class="col-sm-9">@Model.TotalAmount.ToString("C")</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="List">Back to List</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a>
</div>
