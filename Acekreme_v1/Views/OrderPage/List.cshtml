@model IEnumerable<AceKreme_v1.Dtos.OrderDto>
@{
    ViewData["Title"] = "Orders";
}
<h1>Orders</h1>

<p>
    <a class="btn btn-primary" asp-controller="OrderPage" asp-action="New">+ New Order</a>
</p>

@if (Model is null || !Model.Any())
{
    <div class="alert alert-info">No orders found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th class="text-end">Total</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.OrderByDescending(x => x.OrderDate))
            {
                <tr>
                    <td>@o.OrderId</td>
                    <td>@o.OrderDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="text-end">@o.TotalAmount.ToString("C")</td>
                    <td>@o.Status</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@o.OrderId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@o.OrderId">Edit</a>
                        <form asp-action="ConfirmDelete" asp-route-id="@o.OrderId" method="post" class="d-inline">
                            <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
