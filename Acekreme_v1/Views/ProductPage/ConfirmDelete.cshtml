@model AceKreme_v1.Dtos.ProductDto
@{
    ViewData["Title"] = "Delete Product";
}
<h1>Delete Product</h1>

<div class="alert alert-danger">
    Are you sure you want to delete <strong>@Model.Name</strong>?
</div>

<dl class="row">
    <dt class="col-sm-3">Price</dt>
    <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
    <dt class="col-sm-3">Stock</dt>
    <dd class="col-sm-9">@Model.Stock</dd>
</dl>

<form asp-action="ConfirmDelete" asp-route-id="@Model.ProductId" method="post">
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
