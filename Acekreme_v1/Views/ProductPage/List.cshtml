@model IEnumerable<AceKreme_v1.Dtos.ProductDto>
@{
    ViewData["Title"] = "Products";
}
<h1 class="mb-3">Products</h1>

<p>
    <a class="btn btn-primary" asp-controller="ProductPage" asp-action="New">+ New Product</a>
</p>

@if (Model is null || !Model.Any())
{
    <div class="alert alert-info">No products found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th class="text-end">Price</th>
                <th class="text-center">Stock</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td class="text-end">@p.Price.ToString("C")</td>
                    <td class="text-center">@p.Stock</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@p.ProductId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.ProductId">Edit</a>
                        <form asp-action="ConfirmDelete" asp-route-id="@p.ProductId" method="post" class="d-inline">
                            <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
