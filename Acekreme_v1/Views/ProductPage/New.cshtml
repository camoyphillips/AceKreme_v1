@model AceKreme_v1.Dtos.ProductDto
@{
    ViewData["Title"] = "New Product";
}
<h1>New Product</h1>

<form asp-action="New" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductImagePath" class="form-label"></label>
        <input asp-for="ProductImagePath" class="form-control" placeholder="/images/products/sku123.jpg" />
        <span asp-validation-for="ProductImagePath" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
    <a class="btn btn-secondary" asp-action="List">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
